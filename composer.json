{
  "name": "pi/core",
  "description": "Pi is a multi-tenant application development engine for cloud ready SaaS platform with support for SSO/OAuth.",
  "license": "BSD-3-Clause",
  "keywords": [
    "Pi",
    "Pi Engine",
    "Laminas",
    "MultiTenant",
    "SaaS"
  ],
  "homepage": "http://piengine.org",
  "authors": [
    {
      "name": "Taiwen Jiang",
      "email": "taiwen@me.com"
    },
    {
      "name": "Hossein Azizabadi Farahani",
      "email": "hossein@azizabadi.com"
    },
    {
      "name": "Pi Team",
      "homepage": "https://github.com/pi-engine/pi/graphs/contributors"
    }
  ],
  "require": {
    "php": "~8.1.0 || ~8.2.0",
    "ext-ctype": "*",
    "ext-fileinfo": "*",
    "ext-gd": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-spl": "*",
    "lib-curl": "*",

    "laminas/laminas-mvc": "*",
    "laminas/laminas-mvc-middleware": "*",
    "laminas/laminas-servicemanager": "*",
    "phpseclib/phpseclib": "~3.0",
    "imagine/imagine": "*",
    "voku/anti-xss": "*",
    "phayes/geophp": "*",
    "emcconville/google-map-polyline-encoding-tool": "*",
    "raiym/instagram-php-scraper": "*",
    "bigbluebutton/bigbluebutton-api-php": "*",
    "phpmailer/phpmailer": "*",
    "php-ffmpeg/php-ffmpeg": "*",
    "phpoffice/phpspreadsheet": "*"
  },

  "autoload": {
    "psr-4": {
      "User\\": "vendor/pi/core/src/"
    }
  },

  "suggest": {
    "ext-apc": "for opcode cache and system persistent data",
    "ext-discount": "for Markdown text parsing",
    "ext-intl": "for i18n features"
  }
}
